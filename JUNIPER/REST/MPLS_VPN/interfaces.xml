  <command name="IMPORT">
    <operation>GET</operation>
    <post_template>{if ($params.ip_addr) and (!$params.ip_prefix)}
{$params.ip_prefix = &quot;32&quot;}
{/if}
{if $params.ip_addr}
{assign_object_variable var=&quot;ip&quot; value = &quot;{$params.ip_addr}/{$params.ip_prefix}&quot;}
{/if}</post_template>
    <parser>
      <section>
        <regexp>@^\s \s*$@</regexp>
        <xpath>//physical-interface/logical-interface</xpath>
      </section>
      <lines>
        <line>
          <array/>
          <regexp>@&lt;name&gt;(?&lt;object_id&gt;\S+?)&lt;/name&gt;@</regexp>
          <xpath>//name</xpath>
        </line>
        <line>
          <array/>
          <regexp>@&lt;ifa-destination&gt;(\d{1,3}\.*){1,4}/(?&lt;ip_prefix&gt;\d{1,2})&lt;/ifa-destination&gt;@</regexp>
          <xpath>//address-family/interface-address</xpath>
        </line>
        <line>
          <array/>
          <regexp>@&lt;ifa-local&gt;(?&lt;ip_addr&gt;(\d{1,3}\.){3}\d{1,3})&lt;/ifa-local&gt;@</regexp>
          <xpath>//address-family/interface-address</xpath>
        </line>
      </lines>
    </parser>
    <xpath>/rpc/get-interface-information</xpath>
  </command>
  <command name="UPDATE">
    <operation>{assign var=interface_array value=&quot;.&quot;|explode:$params.object_id}
{assign var=&apos;phys_interface&apos; value=$interface_array.0}
{assign var=&apos;logical_interface&apos; value=$interface_array.1}
&lt;lock-configuration/&gt;
&lt;load-configuration&gt;
&lt;configuration&gt;
&lt;interfaces&gt;
&lt;interface&gt;
&lt;name&gt;{$phys_interface}&lt;/name&gt;
&lt;unit&gt;
&lt;name&gt;{$logical_interface}&lt;/name&gt;
&lt;family&gt;
&lt;inet&gt;
&lt;address delete=&quot;delete&quot;&gt;
&lt;/address&gt;
{if $params.ip_addr}
&lt;address&gt;
&lt;name&gt;{$params.ip_addr}/{$params.ip_prefix}&lt;/name&gt;
&lt;/address&gt;
{/if}
&lt;/inet&gt;
&lt;/family&gt;
&lt;/unit&gt;&lt;/interface&gt;
&lt;/interfaces&gt;
&lt;/configuration&gt;
&lt;/load-configuration&gt;
&lt;commit/&gt;
&lt;unlock-configuration/&gt;</operation>
    <rest>POST</rest>
    <xpath>/rpc</xpath>
  </command>
